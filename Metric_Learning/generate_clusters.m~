clear;
MU1 = [2 2];
SIGMA1 = [2 0; 0 1];
MU2 = [-2 -1];
SIGMA2 = [1 0; 0 1];
MU3 = [10 4];
SIGMA3 = [3 0; 0 1];


X = [mvnrnd(MU1, SIGMA1, 1000); mvnrnd(MU2, SIGMA2, 1000); mvnrnd(MU3, SIGMA3, 1000)];
S1 = X([1:1000], :);
S2 = X([1001:2000], :);
S3 = X([2001:3000], :);


scatter(X(:,1), X(:,2), 10, '.')
hold on

S = {S1, S2, S3};
D = {{S1, S3}, {S2, S3}};
E1 = cell(length(D),1);
E2 = cell(length(S),1);
Tcell=cell(length(D),1);

for k=1:length(D)
    curCell = D{k};
    E_temp = bsxfun(@minus, diag(curCell{1}*curCell{1}'), 2*curCell{1}*curCell{2}');
    E1{k} = bsxfun(@plus, E_temp, diag(curCell{2}*curCell{2}'));
    Tcell{k}=1/(length(curCell{1})*length(curCell{2}))*ones(length(curCell{1}),1);
end

for k=1:length(S)
    curCell = S{k};
    E_temp = diag(curCell*curCell')
    E2{k} = E_temp
end
[rows, cols] = size(arr);
arr = cell2mat(E1);
t1 = cell2mat(Tcell)';
t2 = ones(cols, 1);

cvx_begin
variable sigma mu
maximize log((1/length(D))*t1*exp(sigma*arr)*t2 + exp(mu))
subject to
    log((1/size(S))





